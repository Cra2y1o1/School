@using School.Controllers;
@{
    ViewBag.Title = "Удаление аккаунта";
    Layout = "~/Views/_LayoutClient.cshtml";
}

<div class="message warning">
    <div class="login-head">
        <a href="/Client/Index"><div class="alert-close"> </div></a>
        <h2>Удаление</h2>
    </div>
    <div class="sub-head">
        <p><font color="maroon"><b>@ViewBag.DelAcc</b></font></p>

    </div>
    <form action="realdelete" method="post">
        <input name="id" class="simpleText" type="number" min="1" placeholder="ID удаляемого аккаунта" required>
        <div class="p-container">
            <label class="checkbox"><input type="checkbox" name="checkbox" required><i></i>Подтвердить</label>
        </div>
        <div class="clear"> </div>
        <div class="submit">
            <input class="to-animate" type="submit" value="Удалить">
        </div>
    </form>
</div>