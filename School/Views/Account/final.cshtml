@using School.Controllers;
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/_Layout.cshtml";
    string message = "";
    if(AccountController.newPerson.level == 1){
        message = "Для установления вам вашего класса скачайте и заполните документ";
    }
    else if(AccountController.newPerson.level == 2){
        message = "Для установления связи между вами и вашим ребенком скачайте и заполните документ";
    }
    else{
        message = "Для установления вашей должности и выдачи сооответствующих привелегий скачайте и заполните документ";
    }
}
<div class="shadow-forms">
    <div class="message warning">
        <div class="login-head">
            <a href="/"><div class="alert-close"> </div></a>
            <h2>Регистрация</h2>
        </div>
        <div class="sub-head">
            <img src="~/images/final.png" alt="" />
        </div>
        <form action="downloadStatements" method="post">
            <p class="simpleText">Регистрация успешно завершена</p>
            <p class="simpleText">@message</p>
            <div class="submit">
                <input type="submit" value="Скачать заявление">
            </div>
        </form>
    </div>
</div>