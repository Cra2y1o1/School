@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="shadow-forms">
    <div class="message warning">
        <div class="login-head">
            <a href="/"><div class="alert-close"> </div></a>
            <h2>Регистрация</h2>
        </div>
        <div class="sub-head">
            <img src="~/images/step2.png" alt="" />
        </div>
        <form action="verfy2Step" method="post">
            <input class="simpleText" name="birthday" type="date" placeholder="Дата рождения" required>
            <input class="simpleText" name="email" type="email" placeholder="E-mail">
            <input class="simpleText" name="number" type="tel" pattern="\+375\([0-9]{2}\)[0-9]{3}-[0-9]{2}-[0-9]{2}" placeholder="Номер телефона" required>
            <div class="submit">
                <input type="submit" value="Следующий шаг">
            </div>
        </form>
    </div>
</div>