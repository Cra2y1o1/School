@using School.Controllers;
@using School.Data.Models;
@{
    ViewBag.Title = "Добро пожаловать!";
    Layout = "~/Views/_LayoutClient.cshtml";
    Person current = AccountController.current;
}

<p class="text-index-p">Добро пожаловать <b>@current.lastName @current.name @current.patronymic</b></p>
<p class="text-index-p">Вы @if (current.position.Equals("Сотрудник"))
{
    <b>@current.fullPosition</b>
}
else
{
       <b>@current.position</b>
}
    </p>
<p class="text-index-p">Ваш уровень доступа <b>@current.level из 7</b></p>
<p class="text-index-p">Выберайте пункты меню для работы с web-приложением</p>